---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Alphonics">

  <section class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-4">Alphonics</h1>
    <p class="mb-8">Alphonics is a collection of phonics resources for teachers and parents. It includes a range of free resources, as well as a paid membership option.</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <Card
        title="Free Resources"
        body="A range of free phonics resources for teachers and parents."
        href="/free-resources"
      />
      <Card
        title="Membership"
        body="Access to a range of additional resources, including lesson plans, games and activities."
        href="/membership"
      />
    </div>
  </section>

</Layout>
