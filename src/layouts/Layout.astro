---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#b81414" />
    <meta name="msapplication-TileColor" content="#b81414" />
    <meta name="theme-color" content="#ffffff" />
    <title>{title}</title>
    <meta name="description" content={title} />
    <script src="/src/pwa.ts"></script>
  </head>
  <body>
    <header class="bg-gray-800 p-4 mb-4">
      <nav class="flex items-center justify-between">
        <ul class="flex space-x-4">
          <li>
            <a href="/" class="text-white hover:text-gray-300">Home</a>
          </li>
          <li>
            <a href="/about" class="text-white hover:text-gray-300">Discover</a>
          </li>
          <li>
            <a href="/contact" class="text-white hover:text-gray-300">Library</a>
          </li>
        </ul>
    
        <div class="flex items-center space-x-4">
          <a href="/login" class="text-white hover:text-gray-300">Login</a>
          <a href="/register" class="text-white hover:text-gray-300">Register</a>
        </div>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    <footer>
    </footer>